{
	"name": "@terai/translator",
	"description": "terai core translator",
	"version": "0.0.13",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"author": "Hugo Corta <corta.hugo@gmail.com>",
	"scripts": {
		"dev": "tsdown --format=esm --no-dts --watch",
		"build": "tsdown"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./translators": {
			"import": {
				"types": "./dist/translators/index.d.mts",
				"default": "./dist/translators/index.mjs"
			},
			"require": {
				"types": "./dist/translators/index.d.cts",
				"default": "./dist/translators/index.cjs"
			}
		}
	},
	"peerDependencies": {
		"@aws-sdk/client-translate": "^3",
		"@google-cloud/translate": "^8",
		"ai": "^4",
		"deepl-node": "^1",
		"zod": "^3"
	},
	"peerDependenciesMeta": {
		"@aws-sdk/client-translate": {
			"optional": true
		},
		"@google-cloud/translate": {
			"optional": true
		},
		"ai": {
			"optional": true
		},
		"deepl-node": {
			"optional": true
		},
		"zod": {
			"optional": true
		}
	},
	"devDependencies": {
		"@aws-sdk/client-translate": "^3.936.0",
		"@google-cloud/translate": "^9.3.0",
		"@terai/runtime": "workspace:*",
		"@terai/types": "workspace:*",
		"@terai/utils": "workspace:*",
		"deepl-node": "^1.22.0"
	}
}
