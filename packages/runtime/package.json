{
	"name": "@terai/runtime",
	"version": "0.0.14",
	"description": "terai node utilities",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"author": "Hugo Corta <corta.hugo@gmail.com>",
	"scripts": {
		"dev": "tsdown --format=esm --no-dts --watch",
		"build": "tsdown"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"dependencies": {
		"@terai/logger": "workspace:*",
		"bundle-n-require": "^1",
		"chokidar": "^3",
		"fast-glob": "^3",
		"fs-extra": "^1",
		"look-it-up": "^2",
		"outdent": "^0",
		"pathe": "^1"
	},
	"devDependencies": {
		"@terai/types": "workspace:*",
		"@types/fs-extra": "^11"
	}
}
