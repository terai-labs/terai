{
	"name": "@terai/dev",
	"version": "0.0.13",
	"description": "The user-facing package for Terai",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"private": false,
	"author": "Hugo Corta <corta.hugo@gmail.com>",
	"bin": {
		"terai": "bin.js"
	},
	"scripts": {
		"dev": "tsdown --format=esm --no-dts --watch",
		"build": "tsdown"
	},
	"files": [
		"bin.js",
		"dist"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"dependencies": {
		"@inquirer/prompts": "^3",
		"@terai/extractor": "workspace:*",
		"@terai/runtime": "workspace:*",
		"@terai/translator": "workspace:*",
		"@terai/utils": "workspace:*",
		"@terai/types": "workspace:*",
		"cac": "^6",
		"dotenv": "^1",
		"inquirer": "^9",
		"kleur": "^4",
		"perfect-debounce": "^1",
		"preferred-pm": "^3"
	},
	"devDependencies": {
		"@terai/generator": "workspace:*",
		"@terai/logger": "workspace:*",
		"@types/update-notifier": "^6",
		"update-notifier": "^6"
	}
}
